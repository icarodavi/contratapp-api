{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug API (NestJS)",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "run",
                "start:debug"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "restart": true,
            "autoAttachChildProcesses": true
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to API",
            "port": 9229,
            "restart": true
        }
    ]
}