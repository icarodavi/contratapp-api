  DECLARACAO_DE_EXPERIENCIA
  DECLARACAO_DE_QUALIFICACAO
  DECLARACAO_DE_ME_EPP

  // Comprovantes
  COMPROVANTE_ENDERECO
  COMPROVANTE_INSCRICAO
