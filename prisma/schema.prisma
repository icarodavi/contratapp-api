generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum DisputaStatus {
  AGUARDANDO
  ABERTA
  SUSPENSA
  ENCERRADA
}

enum StatusInscricao {
  PENDENTE
  DOCUMENTACAO_OK
  HABILITADO
  INABILITADO
}

enum TipoEmpresa {
  ME
  EPP
  MEI
  EIRELI
  LTDA
  SA
  OUTROS
}

